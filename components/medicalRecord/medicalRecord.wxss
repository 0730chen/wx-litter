/* components/medicalRecord/medicalRecord.wxss */
.record-wrap{
  padding: 16px;
  background: white;
  display: flex;
  flex-direction: column;
  margin: 8px;
}
.record-ttile{
  display: flex;
  flex-direction: row;

}
.patient-message{
  display: flex;
  padding-left: 16px;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
}
.patient-message-wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.user-name{
  padding: 0 6px;
  font-size: 16px;
  font-weight: 700;
}
.user-age{
  font-size: 16px;
  padding: 0 6px;
  font-weight: 700;
}
.user-gender{
  font-size: 16px;
  font-weight: 700;
}
.patient-title{
  padding: 0 8px;
}
.disease{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-left: 14px;
  font-size: 14px;
}
.doctor-message{
  background: rgb(245, 245, 245);
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 4px;
  padding: 8px;
}
.doctor-name{
  padding-left: 8px;
  font-size: 16px;
}
.doctor-position{
  padding-left: 8px; 
  font-size: 14px;
  color: #ccc;
}
.operating{
  padding:16px 8px 8px 8px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.op{
  width: 33.3%;
  border-right: 1px solid #ccc;
  text-align: center;
}
.right{
  width: 33.3%;
  text-align: center;
  color: rgb(19, 77, 155);

}
.disease{
  overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
/* pages/home/home.wxss */
.home-wrap{
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.tabs{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  outline: none;
}
.med{
  flex: 1;
  text-align: center;
  padding: 12px 0;
  background: white;
}
.dis{
  flex: 1;
  padding: 12px 0;
  text-align: center;
  background: white;
}
.selected{
  color: rgb(17, 225, 147);
  font-size: 18px;
}
.patient-list{
  height: 100%;
  background-color:rgb(241, 243, 244);
  overflow: auto;
  flex: 1;
}
.patient{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.doctor-list{
  height: 100%;
  flex: 1;
  background-color:rgb(241, 243, 244);
  overflow: auto;
}
.hover-button{
  opacity: 0.9;
  background: #f7f7f7;
}
.right{
  width: 24px;
  height: 24px;
}
.tabs-container{
  width: 100%;
  height: 40px;
}
.no-doctor{
  padding-top: 64px;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.document{
  height: 64px;
  width: 64px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}
.no-more{
  padding: 8px;
  text-align:center;
  font-size: 12px;
  color: #ccc;
}
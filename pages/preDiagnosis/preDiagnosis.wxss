/* pages/preDiagnosis/preDiagnosis.wxss */

.pre-form{
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.pre-form-wrap{
  flex: 1;
  overflow: auto;
}
.input-disease{
  background-color: white;
  color: black;
}
.title{
  padding: 8px;
  background: rgb(245, 245,245);
  color: rgb(19, 77, 155);
}
.input-action{
  width: 100%;
  display: flex;
  justify-content: space-between;
  background: white
}
.placeholder{
  box-sizing: border-box;
  width: 50%;
  text-align: center;
  padding: 8px;
  color: rgb(19, 77, 155);
  border-right: lightgray 1px solid;
}
.active{
  opacity: 0.9;
  background: #f7f7f7;
}
.photo-wrap{
  box-sizing: border-box;
}
.photo-action{
  margin: 8px ;
}
.des{
  font-size: 12px;
  color: lightgray;
}
.photo-wrap{
  background: white;
}

.submit{
  padding: 16px 0;
}

.title{
  padding: 12px;
}
.message-wrap{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.message{
  display: flex;
  flex-direction: row;
  padding: 16px 18px;
  background: white;
  justify-content: space-between;
  align-items: center;
}
.use-avator{
  border-radius: 50%;
  display: flex;
  align-items: center;
}
.avator{
  width: 48px;
  height: 48px;
  border-radius: 50% !important;
}
.user-message{
  display: flex;
  padding-left: 32px;
  flex-direction: column;
}
.use-name{
  font-weight: 700;
}
.right{
  height: 16px;
  width: 16px;
}
.hover-button{
  opacity: 0.9;
  background: #f7f7f7;
}
.patients-wrap{
  margin-top: 16px;
  background: white;
  padding:8px 24px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.patient-manage{
  margin-top: 8px;
}
.address{
  font-size: 14pt;
  margin-top: 8px;
}
.service{
  margin-top: 8px;
}
.statement{
  margin-top: 32px;
  text-align: center;
  font-size: 10px;
  color:black;
}
.patients{
  height: 32px;
  width: 32px;
  padding-right:24px ;
}
.patients-icon{
  display: flex;
  align-items: center;
}
@media (min-width: 480px) {
  /* 仅在 480px 或更宽的屏幕上生效的样式规则 */
  .my-class {
    width: 200px;
  }
}
@media (min-width: 375px) {
  /* 仅在 480px 或更宽的屏幕上生效的样式规则 */
  .my-class {
    width: 200px;
  }
}

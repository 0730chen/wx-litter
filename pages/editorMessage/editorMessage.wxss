/* pages/editorMessage/editorMessage.wxss */
page{
  background: white;
}
.message-form{
  transform: translateY(16px);
}
.person-message-wrap{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.avator{
  margin-top: 20px;
  background: white;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  padding:12px 16px;
  align-items: center;
  justify-content: space-between;
}
.avator-icon{
  width: 32px;
  background: #f5f5f5;
  border-radius: 50%;
  margin-left: 64px;
  height: 32px;
}
.avator-container{
  display: flex;
  align-items: center;
}
.avator-change{
  display: flex;
  align-items: center;
}
.right{
  width: 24px;
  height: 24px;
}
.patient-name{
  background: white;
  display: flex;
  border-bottom: 1px solid #f5f5f5;
  padding:16px;
}
.input-name{
  padding-left: 64px;
}
.patient-gender{
  background: white;
  padding:12px 16px;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.patient-age{
  background: white;
  padding:12px 16px;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.age{
  padding-right: 120px;
}
.gender{
  padding-right: 140px;
}
.picker{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.selecte-wrap{
  width: 100%;
}
.save-message{
  margin-top: 12px;
}
.phone{
  background: white;
  padding:12px 16px;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
}
.phone-number{
  padding-left: 64px;
}
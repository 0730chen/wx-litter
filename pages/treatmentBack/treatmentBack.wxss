.treatment-wrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.slider{
  padding: 8px;
  display: flex;
  align-items: center;
  background: white;
}
.grade{
  padding: 8px;
  background: white;
  display: flex;
  flex-direction: row;
}
.treatment-container{
  flex: 1;
}
.overflow-text{
